<% if @errors %>
  <div data-alert class='alert-box alert radius' >
    <% @errors.each do |error| %>
      <%= error %>
    <% end %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
<% if flash[:warning] %>
    <div data-alert class='alert-box warning radius' >
      <%= flash[:warning] %><a href="#" class="close">&times;</a>
    </div>
<% end %>
<% if flash[:page_message] %>
    <div data-alert class='alert-box primary radius' >
      <%= flash[:page_message] %>
    </div>
<% end %>
