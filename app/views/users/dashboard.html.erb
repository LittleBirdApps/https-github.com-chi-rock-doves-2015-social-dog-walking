
<li><a id="load-territories-geo-layer">Territories</a></li>
</div>
<div id='square-map' data-user-walk-count="<%= @user.walks.count %>">
  <%= render "shared/map" %>
</div>

<div id="message" class="row">
  <% if @errors %>
    <div data-alert class='alert-box alert radius' >
      <% @errors.each do |error| %>
        <%= error %>
      <% end %>
      <a href="#" class="close">&times;</a>
    </div>
  <% elsif flash[:message] %>
    <div data-alert class='alert-box warning radius' >
      <%= flash[:message] %><a href="#" class="close">&times;</a>
    </div>
  <% end %>
  <% if current_user.walks.length == 0 %>
    <div data-alert class='alert-box warning radius' >
      You don't have any walks yet!
    </div>
  <% else %>
    <div data-alert class='alert-box primary radius' >
      Nice day for a walk!
    </div>
  <% end %>
</div>

  <%= render "shared/start_walk_button" %>

<% if current_user.dogs.any? %>
  <div class = "row">
    <div class = "small-centered columns">
      <h3>My Dogs</h3>
        <% current_user.dogs.each do |dog| %>
          <%= render partial: "dogs/dog_stats", locals: {dog: dog} %>
        <% end %>
    </div>
  </div>
  <% else %>
  <div data-alert class='alert-box warning radius' >
      You haven't added any dogs yet!<a href="#" class="close">&times;</a>
    </div>
  <% end %>



<div class = "row">
  <div class = "small-centered columns">
    <h3>Neighborhood Leaders</h3>
      <% @local_area.neighbors.each do |neighbor| %>
        <%= render partial: "user_stats", locals: {user: neighbor} %>
      <% end %>
  </div>
</div>

<div class="row">
  <%= render "shared/logout_button" %>

</div>

