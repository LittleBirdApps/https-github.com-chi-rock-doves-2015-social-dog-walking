<%= form_for @user do |f| %>

  <div class = "row">
    <div class = "large-4 medium-8 columns">
      <%= f.label :username %>
      <%= f.text_field :username %>

    <div class = "large-4 medium-8 columns">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
  </div>

  <div class = "row">
    <div class = "medium-3 columns">
      <%= f.label :password %>
      <%= f.text_field :password %>
    </div>
  </div>

  <div class = "row">
    <div class='medium-3 columns'>
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>
    <div class='medium-3 columns'>
      <%= f.submit "register", {class: "button"} %>
    </div>
  </div>

<% end %>
