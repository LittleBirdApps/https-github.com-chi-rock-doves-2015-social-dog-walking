	<div id="map-canvas" style="width: 500px; height: 500px"></div>

  <script type="text/javascript">
// This example creates a simple polygon representing the Bermuda Triangle.

function initialize() {
  var mapOptions = {
    zoom: 5,
    center: new google.maps.LatLng(24.886436490787712, -70.2685546875),
    mapTypeId: google.maps.MapTypeId.TERRAIN
  };

  var bermudaTriangle;

  var map = new google.maps.Map(document.getElementById('map-canvas'),
      mapOptions);

  // Define the LatLng coordinates for the polygon's path.
  var triangleCoords = [
    new google.maps.LatLng(20.774252, -80.190262),
    new google.maps.LatLng(20.774252, -90.190262),
    new google.maps.LatLng(15.774252, -90.190262),
    new google.maps.LatLng(15.774252, -80.190262),
    new google.maps.LatLng(18.774252, -95.190262),
    new google.maps.LatLng(100.774252, -150.190262),


  ];

  // Construct the polygon.
  bermudaTriangle = new google.maps.Polygon({
    paths: triangleCoords,
    strokeColor: '#FF0000',
    strokeOpacity: 0.8,
    strokeWeight: 2,
    fillColor: '#FF0000',
    fillOpacity: 0.35
  });

  bermudaTriangle.setMap(map);
}

google.maps.event.addDomListener(window, 'load', initialize);
  </script>
